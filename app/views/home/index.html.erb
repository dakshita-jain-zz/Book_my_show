<h1>Listing shows</h1>
<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Venue</th>
      <th>Timing</th>
      <th>Date</th>
      <th>Ticket_Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.movie.name %></td>
        <td><%= show.venue %></td>
        <td><%= show.timing %></td>
        <td><%= show.date %></td>
        <td><%= show.ticket_available %></td>
        <td><%= link_to 'book', new_show_booking_path(show_id: show.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Logout', logout_path, method: :delete %>
